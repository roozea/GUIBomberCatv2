# BomberCat Integrator Configuration

# AWS Configuration (Required for AWS IoT features)
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="us-west-2"
AWS_IOT_ENDPOINT="your-iot-endpoint.iot.us-west-2.amazonaws.com"

# API Configuration
API_HOST="0.0.0.0"
API_PORT="8000"
API_DEBUG="true"
API_CORS_ORIGINS="*"  # Configure appropriately for production

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Device Configuration
DEVICE_SCAN_TIMEOUT="30"  # Seconds
DEVICE_CONNECTION_TIMEOUT="10"  # Seconds

# Flash Configuration
FLASH_CHUNK_SIZE="1024"  # Bytes
FLASH_TIMEOUT="300"  # Seconds
FLASH_MAX_RETRIES="3"

# File Storage
FIRMWARE_STORAGE_PATH="./firmware_storage"
CONFIG_STORAGE_PATH="./config_storage"
MAX_FIRMWARE_SIZE="10485760"  # 10MB in bytes

# Security (Optional)
API_SECRET_KEY="your-secret-key-for-jwt-tokens"
API_ACCESS_TOKEN_EXPIRE_MINUTES="30"

# Database (Future use)
# DATABASE_URL="sqlite:///./bombercat.db"
# DATABASE_URL="postgresql://user:password@localhost/bombercat"

# Monitoring (Optional)
ENABLE_METRICS="false"
METRICS_PORT="9090"